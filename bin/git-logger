#!/bin/sh
# Install hook scripts
if [ $# == 2 ] && [ "$1" == "install" ]; then
	arg=$2
	path="${arg%/}"
	git_path=$(cd "$path";git rev-parse --git-dir 2> /dev/null)
	if [[ ! -z $git_path ]]; then
		cp $(echo $(cd $(dirname $0)/..;pwd))/etc/git-logger-hooks/* $path/.git/hooks/
	fi
else
	echo "usage: install path/to/git/repo"
fi
